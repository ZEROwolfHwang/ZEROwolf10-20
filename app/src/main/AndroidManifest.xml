<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zero.wolf.greenroad">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".GreenRoadApplication"
        android:allowBackup="true"
        android:icon="@mipmap/setting"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".PhotoActivity"

            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:windowSoftInputMode="adjustUnspecified|stateHidden"
            android:name=".activity.SureGoodsActivity"
            android:parentActivityName=".PhotoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver
            android:name=".NetWorkStateReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity android:name=".activity.TestActivity">

        </activity>

        <activity android:name=".activity.AboutActivity"
            android:theme="@style/ActivityAboutStyle">

        </activity>

        <activity
            android:theme="@style/MyDialogStyle"
            android:name=".activity.ActivationCodeActivity">

        </activity>
    </application>

</manifest>