<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/layout_margin10dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_preview"
            style="@style/style_toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="?attr/custom_attr_app_bg"
        android:layout_weight="1"
        android:layout_height="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:layout_weight="1"
            android:background="#00f"
            android:id="@+id/preview_item_photo_number"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="#6dc8f2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:layout_marginRight="@dimen/layout_margin10dp"
            android:id="@+id/preview_item_photo_body"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="#b9d496"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/layout_margin10dp"
            android:layout_weight="1"
            android:id="@+id/preview_item_photo_goods"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>
