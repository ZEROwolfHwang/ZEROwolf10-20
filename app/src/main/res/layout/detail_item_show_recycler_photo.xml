<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="100dp"
              android:layout_marginRight="@dimen/layout_margin10dp"
              android:layout_height="120dp">
    <com.makeramen.roundedimageview.RoundedImageView

        android:id="@+id/detail_recycler_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:src="?attr/custom_car_number_show"
        app:riv_corner_radius="@dimen/layout_margin10dp"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/detail_recycler_text"
        android:layout_width="match_parent"
        android:text="三证-1"
        android:layout_gravity="center"
        android:textSize="@dimen/text18"
        android:gravity="center"
        android:layout_height="@dimen/layout_margin20dp"/>

</LinearLayout>