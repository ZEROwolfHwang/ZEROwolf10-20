<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:orientation="vertical"
              android:padding="@dimen/layout_margin10dp"
             android:layout_height="match_parent"
             tools:context="com.zero.wolf.greenroad.fragment.CheckFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="wrap_content"
        android:layout_marginTop="@dimen/layout_margin5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="现场检查结论"
            android:textSize="@dimen/text16"/>

        <TextView
            android:layout_marginTop="@dimen/layout_margin10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="免费绿通车-符合绿通放行规定"
            android:textColor="@color/black"
            android:textSize="@dimen/text18"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/layout_margin5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现场检查说明"
            android:textSize="@dimen/text22"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="免费绿通车-符合绿通放行规定"
            android:textColor="@color/black"
            android:textSize="@dimen/text18"/>


    </LinearLayout>

</LinearLayout>
