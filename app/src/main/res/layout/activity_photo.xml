    <LinearLayout
        android:id="@+id/layout_number"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/layout_margin10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            style="@style/text_view_2_car"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_line_rect_13"
            android:text="@string/tv_car_number"/>

        <ImageView
            android:id="@+id/iv_car_number"
            android:layout_width="@dimen/layout_margin80dp"
            android:scaleType="fitCenter"
            android:background="@drawable/car_number_selection"
            android:layout_marginRight="@dimen/layout_margin10dp"
            android:layout_height="@dimen/layout_margin80dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_car_body"
            android:layout_width="@dimen/layout_margin80dp"
            android:scaleType="fitCenter"
            android:background="@drawable/car_body_selection"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:layout_height="@dimen/layout_margin80dp"/>


        <TextView
            style="@style/text_view_2_car"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_line_rect_2"
            android:text="@string/tv_car_body"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_view_2_car"
            android:layout_marginLeft="40dp"
            android:background="@drawable/shape_line_rect_13"
            android:text="@string/tv_car_goods"/>

        <ImageView
            android:id="@+id/iv_car_goods"
            android:layout_width="@dimen/layout_margin80dp"
            android:scaleType="fitCenter"
            android:background="@drawable/car_goods_selection"
            android:layout_marginRight="@dimen/layout_margin10dp"
            android:layout_height="@dimen/layout_margin80dp"/>


    </LinearLayout>

    <include
        android:id="@+id/layout_show_3_car"
        layout="@layout/show_3_car_camera"/>


    <Button
        android:id="@+id/bt_ok_send"
        style="@style/style_button_sure"
        android:text="@string/ok_send"
        />

