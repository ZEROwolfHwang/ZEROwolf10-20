    <RadioGroup
        android:id="@+id/radio_group_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_margin5dp"
        android:paddingRight="@dimen/layout_margin5dp"
        android:paddingTop="@dimen/layout_margin20dp">


        <RadioButton
            android:id="@+id/license_black"
            style="@style/RadioButtonStyle"
            android:background="@drawable/rb_black_selector"
            android:text="黑牌"
            android:textColor="@color/license_color_yellow_text"
            />

        <RadioButton
            android:id="@+id/license_blue"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="@dimen/layout_margin2dp"
            android:layout_marginRight="@dimen/layout_margin2dp"
            android:background="@drawable/rb_blue_selector"
            android:text="蓝牌"

            android:textColor="@color/license_color_yellow_text"/>

        <RadioButton
            android:id="@+id/license_yellow"
            style="@style/RadioButtonStyle"
            android:background="@drawable/rb_yellow_selector"
            android:text="黄牌"
            android:textColor="@color/license_color_yellow_text"
            />


        <RadioButton

            android:id="@+id/license_green"
            style="@style/RadioButtonStyle"
            android:layout_marginLeft="@dimen/layout_margin2dp"
            android:layout_marginRight="@dimen/layout_margin2dp"

            android:background="@drawable/rb_green_selector"
            android:text="绿牌"
            android:textColor="@color/license_color_yellow_text"/>

        <RadioButton
            android:id="@+id/license_white"
            style="@style/RadioButtonStyle"
            android:background="@drawable/rb_white_selector"
            android:text="白牌"
            android:textColor="@color/license_color_white_text"/>
    </RadioGroup>

