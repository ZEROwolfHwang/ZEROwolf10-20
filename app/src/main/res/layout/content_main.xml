<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/com.zero.wolf.greenroad.view.RoundImageView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roud_view_operator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center"
            android:src="@drawable/demo"
            app:riv_border_width="3dip"
            app:riv_corner_radius_bottom_left="20dp"
            app:riv_corner_radius_top_right="20dp"
            app:riv_oval="false"/>

        <include
            android:id="@+id/layout_group_main"
            layout="@layout/layout_text_group_main"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_view_space"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center"
            android:src="@drawable/demo"
            app:riv_border_width="3dip"
            app:riv_corner_radius_bottom_left="20dp"
            app:riv_corner_radius_top_right="20dp"
            app:riv_oval="false"/>

        <include
            android:id="@+id/layout_group_main"
            layout="@layout/layout_text_group_main"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_view_operator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="center"
            android:src="@drawable/demo"
            app:riv_border_width="3dip"
            app:riv_corner_radius_bottom_left="20dp"
            app:riv_corner_radius_top_right="20dp"
            app:riv_oval="false"/>

        <include
            android:id="@+id/layout_group_main"
            layout="@layout/layout_text_group_main"/>

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:background="@drawable/shape_background"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:text="@string/has_shot"
            android:textColor="#000"
            android:textSize="14sp"/>


        <ImageView
            android:layout_width="80dp"

            android:layout_height="80dp"
            android:layout_gravity="right"
            android:background="@drawable/numble_backgroup"/>

        <TextView
            android:id="@+id/send_car_number"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="24sp"/>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:background="@drawable/shape_background"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:text="@string/has_not_sent"
            android:textColor="#000"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="80dp"

            android:layout_height="80dp"
            android:layout_gravity="right"
            android:background="@drawable/numble_backgroup"/>

        <TextView
            android:id="@+id/unsend_car_number"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="0"
            android:textColor="#fff"
            android:textSize="24sp"/>


    </FrameLayout>


    <com.zero.wolf.greenroad.view.CircleImageView
        android:id="@+id/iv_camera"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/demo"
        custom:imageType="circle"/>

</LinearLayout>

