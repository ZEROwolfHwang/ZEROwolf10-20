<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_bottom_sure"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/layout_margin5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_car_goods_sure"
            android:layout_width="@dimen/main_width_dp100"
            android:layout_height="@dimen/main_height_dp100"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/car_goods_light"
            app:riv_border_width="2dp"
            app:riv_corner_radius="15dp"
            app:riv_oval="false"/>

        <include
            android:id="@+id/layout_group_sure"
            layout="@layout/layout_text_group_sure"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:padding="@dimen/layout_margin5dp"
        android:id="@+id/recycler_view_goods_sure"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="false"/>

    <Button
        android:id="@+id/bt_ok_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin40dp"
        android:layout_marginLeft="@dimen/layout_margin20dp"
        android:layout_marginRight="@dimen/layout_margin20dp"
        android:background="@drawable/sure_button_select"
        android:gravity="center"
        android:text="@string/ok_send"
        android:textSize="@dimen/text24"/>

</LinearLayout>