<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/layout_margin10dp">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/layout_margin10dp"
                android:layout_marginLeft="@dimen/layout_margin10dp"
                android:layout_marginTop="@dimen/layout_margin10dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/layout_margin60dp"
                    android:layout_height="@dimen/layout_margin60dp"
                    android:background="?attr/custom_car_goods_sure"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_margin10dp"
                    android:background="@drawable/shape_background_main_else_day"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/goods_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:focusable="true"
                        android:gravity="center"
                        android:textColor="@color/white_light"
                        android:textSize="@dimen/text22"/>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/goods_text_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_goods_sure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin10dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>