<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/layout_margin10dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/goods_text_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="@dimen/layout_margin10dp">


        <ImageView
            android:layout_width="@dimen/layout_margin80dp"
            android:layout_height="@dimen/layout_margin80dp"
            android:background="?attr/custom_car_goods_sure"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/layout_margin20dp"
            android:background="?attr/custom_shape_background_fragment"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/goods_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/white_light"
                android:textSize="@dimen/text22"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_goods_sure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:padding="@dimen/layout_margin5dp"/>


</LinearLayout>