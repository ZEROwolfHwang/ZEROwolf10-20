<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/layout_margin100dp"
    android:layout_marginLeft="@dimen/layout_margin5dp"
    android:layout_marginRight="@dimen/layout_margin5dp"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_photo">

    <com.zero.wolf.greenroad.activity.RoundImageView
        android:id="@+id/image_show_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/layout_margin5dp"
        android:src="@drawable/demo"
        app:border_color="@android:color/black"
        app:border_width="2dp"


        app:leftBottom_corner_radius="0dp"
        app:leftTop_corner_radius="20dp"
        app:rightBottom_corner_radius="20dp"
        app:rightTop_corner_radius="0dp"
        app:type="round"/>


</LinearLayout>