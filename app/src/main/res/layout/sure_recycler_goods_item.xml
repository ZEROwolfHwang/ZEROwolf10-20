<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="@dimen/layout_margin5dp"
              android:layout_width="match_parent"
              android:layout_height="40dp">

    <ImageView
        android:id="@+id/iv_recycler_goods"
        android:background="@drawable/demo"
        android:layout_width="@dimen/main_height_dp40"
        android:layout_height="@dimen/layout_margin40dp"/>

    <TextView
        android:layout_toRightOf="@id/iv_recycler_goods"
        android:layout_gravity="center"
        android:id="@+id/tv_sure_recycler_scientific_name"
        android:textSize="@dimen/text20"
        android:text="西蓝花"
        android:paddingLeft="@dimen/layout_margin20dp"
        android:gravity="center_vertical"
        android:layout_width="200dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:text="绿菜花"
        android:id="@+id/tv_sure_recycler_alias"
        android:textSize="@dimen/text14"
        android:gravity="center_vertical"
        android:layout_width="200dp"
        android:layout_height="40dp"/>

</RelativeLayout>