<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_center_sure"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="3dp"
        android:gravity="center"
        android:padding="@dimen/layout_margin10dp">


        <ImageView
            android:id="@+id/iv_station_config"
            android:layout_width="@dimen/layout_margin80dp"
            android:layout_height="@dimen/layout_margin80dp"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:background="?attr/custom_car_station_main"
            android:scaleType="fitCenter"/>


        <include
            android:id="@+id/layout_group_sure"
            layout="@layout/layout_text_group_sure"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_station"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/layout_margin20dp"
        android:paddingLeft="@dimen/layout_margin30dp"
        android:paddingRight="@dimen/layout_margin30dp"
        android:paddingTop="@dimen/layout_margin10dp"/>


</LinearLayout>
