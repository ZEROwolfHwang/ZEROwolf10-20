<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="出口流水号:"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:textColor="#808080"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/export_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="出口车牌:"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="整备质量(吨):"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="收费金额(元):"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="入口路段:"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="入口站:"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="入口车道:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_margin0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_table_1"
                    style="@style/scan_code_change_info_style"
                    android:maxLines="1"
                    android:textSize="@dimen/text16"/>

                <TextView
                    android:id="@+id/text_table_3"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_5"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_7"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_9"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_11"
                    style="@style/scan_code_change_info_style"/>


            </LinearLayout>

        </LinearLayout>
<!--<TextView
    android:layout_width="1dp"
    android:background="#f0f0f0"
    android:layout_height="match_parent"/>-->
        <LinearLayout
            android:layout_width="@dimen/layout_margin0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="荷载质量(吨):"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="称重质量(吨):"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="免费金额(元):"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="出口路段:"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="出口站:"/>

                <TextView
                    style="@style/scan_code_info_style"
                    android:text="出口车道:"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/layout_margin0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_table_2"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_4"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_6"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_8"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_10"
                    style="@style/scan_code_change_info_style"/>

                <TextView
                    android:id="@+id/text_table_12"
                    style="@style/scan_code_change_info_style"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/layout_margin10dp"
        android:layout_marginBottom="@dimen/layout_margin80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:layout_width="@dimen/layout_margin0dp"
            android:layout_weight="1"
            android:text="编辑"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="@color/day_color_green"
            android:layout_marginRight="@dimen/layout_margin20dp"
            android:background="@drawable/scan_fragment_bg_btn_scan"/>

        <Button
            android:layout_weight="1"
            android:id="@+id/scan_qr_code"
            android:layout_width="@dimen/layout_margin0dp"
            android:text="扫描"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_height="50dp"
            android:background="@drawable/scan_fragment_bg_btn_saveoredit"/>

    </LinearLayout>

</LinearLayout>
