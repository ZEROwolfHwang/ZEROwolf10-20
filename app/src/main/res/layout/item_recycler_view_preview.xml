<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="#8ab9f1ff"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/preview_item_color_img"
        android:layout_width="@dimen/layout_margin40dp"
        android:layout_height="@dimen/layout_margin40dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_margin5dp"
        android:background="@drawable/preview_item_color_yellow"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preview_text_car_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="粤B888888"
                android:textColor="@color/black"
                android:textSize="@dimen/text22"
                android:textStyle="italic"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/preview_text_check"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="大大"
                    android:textSize="@dimen/text16"/>

                <TextView
                    android:id="@+id/preview_text_login"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="小小"
                    android:textSize="@dimen/text16"/>

            </LinearLayout>
            <TextView
                android:id="@+id/preview_text_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/layout_margin10dp"
                android:maxLines="2"
                android:gravity="center"
                android:text="苹果"
                android:textSize="@dimen/text18"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preview_text_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="ASC21239DS"
                android:textSize="@dimen/text18"/>

            <TextView

                android:id="@+id/preview_text_shutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-08  09:22:33"
                android:textSize="@dimen/text14"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


