<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#58ff9b">


        <ImageView
            android:id="@+id/item_img_preview"
            android:layout_width="@dimen/layout_margin60dp"
            android:layout_height="@dimen/layout_margin60dp"
            android:background="@color/red"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin10dp"
            android:layout_toRightOf="@id/item_img_preview"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preview_text_car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="粤B888888"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text22"
                    android:textStyle="italic"
                    />

                <TextView
                    android:id="@+id/preview_text_operator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="小小"
                    android:textColor="@color/white_dark"
                    android:textSize="@dimen/text16"/>

                <TextView
                    android:id="@+id/preview_text_goods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="苹果"
                    android:textSize="@dimen/text18"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preview_text_station"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="泰安东收费站"
                    android:textSize="@dimen/text18"/>

                <TextView

                    android:id="@+id/preview_text_shutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-07-08  09:22:33"
                    android:textSize="@dimen/text14"/>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <ViewStub
        android:id="@+id/view_stub_preview"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout="@layout/preview_item_subview_layout"
        android:layout_height="@dimen/layout_margin60dp"/>

</LinearLayout>


