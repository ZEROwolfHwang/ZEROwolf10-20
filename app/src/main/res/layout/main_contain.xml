<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="3dp"
            android:gravity="center">

            <ImageView
                style="@style/main_left_image_view"
                android:background="?attr/custom_car_station_main"/>

            <LinearLayout
                style="@style/main_text_layout_bg_style">

                <TextView
                    style="@style/main_text_static_tv_style"
                    android:text="登记站"/>

                <ImageView
                    style="@style/main_text_static_iv_style"/>

                <TextView
                    android:id="@+id/tv_change_station_main"
                    style="@style/main_text_change_tv_style"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/layout_margin5dp"
            android:elevation="3dp"
            android:gravity="center">

            <ImageView
                style="@style/main_left_image_view"
                android:background="?attr/custom_car_station_main"/>

            <LinearLayout
                style="@style/main_text_layout_bg_style">

                <TextView
                    style="@style/main_text_static_tv_style"
                    android:text="登记车道"/>

                <ImageView
                    style="@style/main_text_static_iv_style"/>

                <TextView
                    android:id="@+id/tv_change_lane_main"
                    style="@style/main_text_change_tv_style"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/layout_margin5dp"
            android:orientation="horizontal">

            <ImageView
                style="@style/main_left_image_view"
                android:background="?attr/custom_car_station_main"/>

            <include
                layout="@layout/layout_text_group_main_operator"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/math_number_main_has"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_height_dp60"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom_shape_line_rect_has"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_height_dp40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/main_height_dp60"
                    android:layout_weight="1"
                    android:background="?attr/custom_shape_line_rect"
                    android:gravity="center"
                    android:text="@string/has_shot"
                    android:textColor="@color/white_light_main_shut"
                    android:textSize="@dimen/text16"/>

                <TextView
                    android:id="@+id/tv_math_number_main_has"
                    android:layout_width="@dimen/main_width_dp60"
                    android:layout_height="@dimen/main_height_dp60"
                    android:background="?attr/custom_text_view_math_number"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text20"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/math_number_main_has_not"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_height_dp60"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/custom_shape_line_rect_has_not"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_height_dp40"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/main_height_dp60"
                    android:layout_weight="1"
                    android:background="?attr/custom_shape_line_rect"
                    android:gravity="center"
                    android:text="@string/has_not_sent"
                    android:textColor="@color/white_light_main_shut"
                    android:textSize="@dimen/text16"/>

                <TextView
                    android:id="@+id/tv_math_number_main_has_not"
                    android:layout_width="@dimen/main_width_dp60"
                    android:layout_height="@dimen/main_height_dp60"
                    android:background="?attr/custom_text_view_math_number"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text20"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_enter_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始登记"/>

</LinearLayout>
