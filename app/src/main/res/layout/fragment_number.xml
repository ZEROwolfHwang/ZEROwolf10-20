<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:padding="@dimen/layout_margin10dp">
            <ImageView
                android:layout_width="@dimen/layout_margin80dp"
                android:layout_height="@dimen/layout_margin80dp"
                android:layout_marginLeft="@dimen/layout_margin10dp"
                android:background="?attr/custom_car_number_sure"
                android:scaleType="fitCenter"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_margin20dp"
                android:background="?attr/custom_shape_background_fragment"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/layout_margin0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <EditText
                       android:textSize="@dimen/text28"
                    android:id="@+id/et_input_box_1"
                    style="@style/number_edit_box_style"/>

                <EditText
                       android:textSize="@dimen/text28"
                    android:id="@+id/et_input_box_2"
                    style="@style/number_edit_box_style"/>

                </LinearLayout>


                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="30dp"
                    android:background="?attr/custom_shape_static"
                    android:focusable="false"/>

               <LinearLayout
                   android:layout_weight="2"
                   android:layout_width="@dimen/layout_margin0dp"
                   android:layout_height="match_parent">

                   <EditText
                       android:id="@+id/et_input_box_3"
                       style="@style/number_edit_box_style"/>
                   <EditText
                       android:id="@+id/et_input_box_4"
                       style="@style/number_edit_box_style"/>
                   <EditText
                       android:id="@+id/et_input_box_5"
                       style="@style/number_edit_box_style"/>
                   <EditText
                       android:id="@+id/et_input_box_6"
                       style="@style/number_edit_box_style"/>
                   <EditText
                       android:id="@+id/et_input_box_7"
                       style="@style/number_edit_box_style"/>

               </LinearLayout>

            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:background="#F0EFF4"
            android:keyBackground="@android:color/holo_blue_light"

            android:shadowColor="#ffffff"

            android:keyTextColor="#000"
            android:shadowRadius="1"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
