<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="100dp"
             android:layout_marginRight="@dimen/layout_margin10dp"
              android:layout_height="50dp">

    <TextView
        android:id="@+id/text_goods"
        android:layout_margin="3dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/day_color_green"
        android:background="@drawable/goods_fragment_text_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton
        android:id="@+id/delete_goods"
        android:background="@drawable/ic_delete_photo"
        android:layout_gravity="right|top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>