<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/layout_margin10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="3dp"
            android:gravity="center">

            <ImageView
                android:background="?attr/custom_car_station_main"
                style="@style/main_left_image_view"/>

            <LinearLayout
                style="@style/main_text_layout_bg_style">

                <TextView
                    android:text="登记站"
                    style="@style/main_text_static_tv_style"/>

                <ImageView
                    style="@style/main_text_static_iv_style"/>

                <TextView
                    android:id="@+id/tv_change_station_config"
                    style="@style/main_text_change_tv_style"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/layout_margin5dp"
            android:elevation="3dp"
            android:gravity="center">

            <ImageView
                android:background="?attr/custom_car_station_main"
                style="@style/main_left_image_view"/>

            <LinearLayout
                style="@style/main_text_layout_bg_style">

                <TextView
                    android:text="登记车道"
                    style="@style/main_text_static_tv_style"/>

                <ImageView
                    style="@style/main_text_static_iv_style"/>

                <TextView
                    android:id="@+id/tv_change_lane_config"
                    style="@style/main_text_change_tv_style"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/layout_margin5dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageView
                android:background="?attr/custom_car_station_main"
                style="@style/main_left_image_view"/>

            <include
                layout="@layout/layout_text_group_main_operator"/>

        </LinearLayout>

        <include
            layout="@layout/math_number_main"/>
    </LinearLayout>



