<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 弹出关于的对话框-->
    <style name="ActivityAboutStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_activity_round
        </item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <!-- 弹出激活码的对话框-->
    <style name="MyDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_activity_round
        </item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#1e2535</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="rect_static">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/shape_static</item>
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="text_static">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_active">
        <item name="android:layout_width">140dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_show_3_camera">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:padding">10dip</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="text_view_2_car">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="style_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/layout_margin40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/license_color_white_text</item>
        <item name="android:textSize">@dimen/text18</item>
    </style>

    <style name="style_button_sure">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_margin60dp</item>
        <item name="android:background">@drawable/sure_button_select</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
